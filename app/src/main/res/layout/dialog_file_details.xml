<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detailFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="File name : dummy.pdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailFilePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Path : dummy.pdf"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/detailFileName"
        app:layout_constraintTop_toBottomOf="@+id/detailFileName" />

    <TextView
        android:id="@+id/detailLastModified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Path : dummy.pdf"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/detailFileName"
        app:layout_constraintTop_toBottomOf="@+id/detailFilePath" />

    <TextView
        android:id="@+id/detailSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Path : dummy.pdf"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/detailFileName"
        app:layout_constraintTop_toBottomOf="@+id/detailLastModified" />
</androidx.constraintlayout.widget.ConstraintLayout>